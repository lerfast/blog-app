<div class="user-profile">
  <div class="list">
    <div class="user-image">
     <img src="path_to_default_user_image.jpg" alt="User Image">
    </div>
    <div class="user-name">
    <%= @user.name %>
    <p class="post-count">Number of posts: <%= @user.posts.count %></p>
    </div>
  </div>
  <div class="user-bio">
    <%= @user.bio %> <!-- Suponiendo que 'bio' es el atributo para la biografÃ­a del usuario -->
  </div>

  <div class="user-posts">
    <% @user.posts.limit(3).each do |post| %> <!-- Mostrando los primeros 3 posts -->
      <div class="post-summary">
        <%= truncate(post.content, length: 100) %> <!-- Suponiendo que 'content' es el contenido del post -->
        <%= link_to 'Read More', post_path(post) %>
      </div>
    <% end %>
    <%= link_to 'See all posts', user_posts_path(@user) %>
  </div>
</div>
<%= link_to 'Back', request.referer || root_path %>